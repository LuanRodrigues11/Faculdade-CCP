#include<iostream>
using namespace std;

//Lista02 - Repetição : Faça um programa que leia N números e informe a soma dos 3 maiores.
//Aluno: Luan Rodrigues
//Instituiçã: If Sudeste MG - Rp
//Período: Primeiro Período


void soma3maiores(int a){
	float maior1 = 0.0;
	float maior2 = 0.0;
	float maior3 = 0.0;
	float soma = 0.0;
	float b = 0.0;
		
for (int i = 1 ; i<=a ; i ++){
	cout<<"Insira o "<<i<<" numero!"<<endl;	
	cin>>b;
	if (b>maior1){
		maior3=maior2;
		maior2=maior1;
		maior1=b;
	}else if (b>maior2){
		maior3=maior2;
		maior2=b;
	}else if (b>maior3){
		maior3=b;
	}	
}
	soma = maior1 + maior2 + maior3;
	cout<<"-----------------------------------------------------------------------"<<endl;
	cout<<"Os tres maiores numeros são "<<maior1<<" , "<<maior2<<" , "<<maior3<<"."<<endl;
	cout<<"A soma dos tres maiores numeros é "<<soma<<"!"<<endl;
	cout<<"-----------------------------------------------------------------------"<<endl;
	
}

int main(){
	float n;
	cout<<"---------------------------------------------------------------------------------------------------------------------"<<endl;
	cout<<"Se esta aqui, é porque deseja saber o calculo dos 3 miores numeros positivos que vc informar, certo? Entao vamos la!!"<<endl;
	cout<<"---------------------------------------------------------------------------------------------------------------------"<<endl;
	
	cout<<"Insira a quantidade de numeros que deseja utilizar --> "<<endl;
	cin>>n;
	
	soma3maiores(n);
	
		return 0;
}

