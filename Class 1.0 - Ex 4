#include<iostream>
using namespace std;

float media(float a, float b, float c){
	float resultado = (a + b + c) / 3;
	return resultado;
	
}

int main(){
	float n1, n2, n3;
	cout<<"Digite o primeiro numero!"<<endl;
	cin>>n1;
	cout<<"Digite o segundo numero!"<<endl;
	cin>>n2;
	cout<<"Digite o terceiro numero!"<<endl;
	cin>>n3;
	cout<<"Vou calcular a media pra voce!"<<endl;
	
	cout<<"A media qu calculei foi: "<<media(n1, n2, n3);
	return 0;
}
